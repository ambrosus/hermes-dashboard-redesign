{
    "extends": [
        "standard"
    ],
    "rules": {
        "space-before-function-paren": "off",
        "no-unused-expressions": "off",
        "no-undef": 0,
        "no-useless-constructor": 0,
        "no-new": 0,
        "standard/no-callback-literal": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
